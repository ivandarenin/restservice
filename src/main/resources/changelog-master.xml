<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>

    <changeSet id="1" author="idarenin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="country"/>
            </not>
        </preConditions>
        <createSequence sequenceName="id_sequence" incrementBy="1" startValue="1"/>
        <createTable tableName="country">
            <column name="id" type="NUMERIC(19)" remarks="ИД" autoIncrement="${autoIncrement}" defaultValueSequenceNext="id_sequence">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" remarks="Страна">
                <constraints nullable="false"/>
            </column>
            <column name="capital" type="VARCHAR(255)" remarks="Столица">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>